<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - پنل مدیریت</title>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    @*<script src="~/js/jquery.min.js" asp-append-version="true"></script>*@
    <script src="~/Dashboard/vendors/bower_components/jquery/dist/jquery.min.js"></script>
    <link href="~/css/kendo.css" asp-append-version="true" rel="stylesheet" />
    <script src="~/js/kendo.js"></script>
    @*<link href="~/css/dashboard.css" asp-append-version="true" rel="stylesheet" type="text/css">*@
    <!-- Data table CSS -->
    <link href="~/Dashboard/vendors/bower_components/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Dashboard/vendors/bower_components/bootstrap-treeview/dist/bootstrap-treeview.min.css" rel="stylesheet" type="text/css">

    <!-- Fancy-Buttons CSS -->
    <link href="~/Dashboard/css/fancy-buttons.css" rel="stylesheet" type="text/css">
    <!-- Custom CSS -->
    <link href="~/Dashboard/css/style.css" asp-append-version="true" rel="stylesheet" type="text/css">
    <link href="~/css/dashboard.css" asp-append-version="true" rel="stylesheet" type="text/css">
    <link href="~/css/myAdmin.css" asp-append-version="true" rel="stylesheet" type="text/css">

</head>

<body>
    <!-- Preloader -->
    <div class="preloader-it">
        <div class="la-anim-1"></div>
    </div>
    <!-- /Preloader -->
    <div class="wrapper theme-1-active pimary-color-blue slide-nav-toggle">
        <!-- Top Menu Items -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="mobile-only-brand pull-left">
                <div class="nav-header pull-left">
                    <div class="logo-wrap">
                        <a asp-controller="MyDashboard" asp-action="Index">
                            <img class="brand-img" src="~/images/logo.png" alt="@StaticData.SiteTitle" />
                            <span class="brand-text">@StaticData.SiteTitle</span>
                        </a>
                    </div>
                </div>
                <a id="toggle_nav_btn" class="toggle-left-nav-btn inline-block ml-20 pull-left" href="javascript:void(0);"><i class="zmdi zmdi-menu"></i></a>
                <a id="toggle_mobile_search" data-toggle="collapse" data-target="#search_form" class="mobile-only-view" href="javascript:void(0);"><i class="zmdi zmdi-search"></i></a>
                <a id="toggle_mobile_nav" class="mobile-only-view" href="javascript:void(0);"><i class="zmdi zmdi-more"></i></a>
                <form id="search_form" role="search" class="top-nav-search collapse pull-left">
                    <div class="input-group">
                        <input type="text" name="example-input1-group2" class="form-control" placeholder="Search">
                        <span class="input-group-btn">
                            <button type="button" class="btn  btn-default" data-target="#search_form" data-toggle="collapse" aria-label="Close" aria-expanded="true"><i class="zmdi zmdi-search"></i></button>
                        </span>
                    </div>
                </form>
            </div>
            <div id="mobile_only_nav" class="mobile-only-nav pull-right">
                <ul class="nav navbar-right top-nav pull-right">

                    @await Html.PartialAsync("_DropDown_App")
                    @await Html.PartialAsync("_DropDown_Alert")
                    @*@await Html.PartialAsync("_DropDown_User")*@
                    @await Component.InvokeAsync("UserDD")

                </ul>
            </div>
        </nav>
        <!-- /Top Menu Items -->
        <!-- right Sidebar Menu -->
        @await Html.PartialAsync("_Sidebar")
        <!-- /right Sidebar Menu -->
        <!-- اصلی Content -->
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row heading-bg">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <h5 class="txt-dark">@ViewData["Title"]</h5>
                    </div>
                    <div class="col-lg-8 col-sm-8 col-md-8 col-xs-12">
                        <breadcrumb asp-homepage-title="صفحه اصلی"
                                    asp-homepage-url="@Url.Action("Index", "Home", values: new { area = "" })"
                                    asp-bootstrap-version="V4"
                                    asp-homepage-glyphicon="fa fa-home"></breadcrumb>
                    </div>
                </div>
                @RenderBody()
                @await Html.PartialAsync("_Footer")
            </div>
        </div>
    </div>

    @*<script src="~/js/dashboard.js" asp-append-version="true"></script>*@
    <!-- jQuery -->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Treeview JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/bootstrap-treeview/dist/bootstrap-treeview.min.js"></script>
    <!-- Data table JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Dashboard/js/dataTables-data.js"></script>

    <!-- Slimscroll JavaScript -->
    <script src="~/Dashboard/js/jquery.slimscroll.js"></script>

    <!-- simpleWeather JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/moment/min/moment.min.js"></script>
    <script src="~/Dashboard/vendors/bower_components/simpleWeather/jquery.simpleWeather.min.js"></script>
    <script src="~/Dashboard/vendors/simpleweather-data.js"></script>

    <!-- Progressbar Animation JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/Dashboard/vendors/bower_components/jquery.counterup/jquery.counterup.min.js"></script>

    <!-- Fancy Dropdown JS -->
    <script src="~/Dashboard/vendors/dropdown-bootstrap-extended.js"></script>

    <!-- اسپارکلاین JavaScript -->
    <script src="~/Dashboard/vendors/jquery.sparkline/dist/jquery.sparkline.min.js"></script>


    <!-- Owl JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/owl.carousel/dist/owl.carousel.min.js"></script>

    <!-- ChartJS JavaScript -->
    <script src="~/Dashboard/vendors/chart.js/Chart.min.js"></script>

    <!-- Morris نمودار JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/raphael/raphael.min.js"></script>
    <script src="~/Dashboard/vendors/bower_components/morris.js/morris.min.js"></script>
    <script src="~/Dashboard/vendors/bower_components/jquery-toast-plugin/dist/jquery.toast.min.js"></script>


    <!-- Switchery JavaScript -->
    <script src="~/Dashboard/vendors/bower_components/switchery/dist/switchery.min.js"></script>

    <!-- Fancy Dropdown JS -->
    <script src="~/Dashboard/js/dropdown-bootstrap-extended.js"></script>



    <!-- Init JavaScript -->
    <script src="~/Dashboard/js/init.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    @*@await Component.InvokeAsync("NToastNotify")*@

    <div class="clearboth">&nbsp;</div>
    <script id="BoolTemplate" type="text/x-kendo-template">
        <img src="/images/#=Enable ? 'yes' : 'no' #.png" />
    </script>


    @await Html.PartialAsync("_Modal")
</body>
</html>
